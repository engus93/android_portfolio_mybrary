<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout_01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".MainActivity">

    <!--드로어 레이아웃-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/home_menu_01_B"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.5"
            android:background="@color/trans"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menu_00"
            tools:srcCompat="@drawable/menu_00" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="MyBrary"
            android:textAlignment="center"
            android:textColor="@color/mybrary_main"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintStart_toEndOf="@+id/home_menu_01_B"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/home_01_search"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:background="@color/trans"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.98"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/search" />

        <View
            android:id="@+id/up_line"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="45dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/home_01_recommend_01"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/trans"
            android:minHeight="20dp"
            android:text="#베스트셀러"
            android:textColor="@color/navy"
            app:layout_constraintBottom_toBottomOf="@+id/home_01_recommend_02"
            app:layout_constraintEnd_toStartOf="@+id/home_01_recommend_02"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/home_01_recommend_02" />

        <Button
            android:id="@+id/home_01_recommend_02"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@color/trans"
            android:minHeight="20dp"
            android:text="#새로 나온 책"
            app:layout_constraintEnd_toStartOf="@+id/home_01_recommend_03"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/home_01_recommend_01"
            app:layout_constraintTop_toBottomOf="@+id/up_line" />

        <Button
            android:id="@+id/home_01_recommend_03"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/trans"
            android:minHeight="20dp"
            android:text="#추천 도서"
            app:layout_constraintBottom_toBottomOf="@+id/home_01_recommend_02"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/home_01_recommend_02"
            app:layout_constraintTop_toTopOf="@+id/home_01_recommend_02" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_01_RE_01"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/down_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_01_recommend_02">

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_01_RE_02"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/down_line"
            app:layout_constraintEnd_toEndOf="@+id/home_01_RE_01"
            app:layout_constraintStart_toStartOf="@+id/home_01_RE_01"
            app:layout_constraintTop_toTopOf="@+id/home_01_RE_01">

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_01_RE_03"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/down_line"
            app:layout_constraintEnd_toEndOf="@+id/home_01_RE_01"
            app:layout_constraintStart_toStartOf="@+id/home_01_RE_01"
            app:layout_constraintTop_toTopOf="@+id/home_01_RE_01" />

        <View
            android:id="@+id/down_line"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_bot_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:clickable="true"
            android:src="@drawable/chat_bot"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/home_01_menu_01_B"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/trans"
                android:contentDescription="ToDo"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/menu_01_01"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/home_01_menu_02_B"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/trans"
                android:contentDescription="Todo"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/menu_02_02"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/home_01_menu_03_B"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/trans"
                android:contentDescription="Todo"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/menu_03_02"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/home_01_menu_04_B"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/trans"
                android:contentDescription="Todo"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/menu_04_02"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/home_01_menu_05_B"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/trans"
                android:contentDescription="Todo"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/menu_05_02"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <RelativeLayout

        android:id="@+id/home_drawer_01"
        android:layout_width="215dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">

        <include
            layout="@layout/home_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>