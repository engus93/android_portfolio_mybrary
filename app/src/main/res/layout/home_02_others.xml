<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/home_02_others_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1.5"
        android:background="@color/trans"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/home_02_others_title"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="7"
        android:background="@null"
        android:gravity="center_vertical"
        android:inputType="none"
        android:text="유저 닉네임"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/home_02_others_back"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/home_02_others_upline"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="45dp"
        android:layout_weight="1"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_02_others_upline">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/home_02_others_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/user_profile"
                    app:civ_border_color="@color/trans"
                    app:civ_border_width="1.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.05"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.05" />

                <Button
                    android:id="@+id/home_02_others_mini_1_B"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:background="@color/trans"
                    android:gravity="bottom|center_horizontal"
                    android:text="보관 책"
                    app:layout_constraintBottom_toBottomOf="@+id/home_02_others_mini_2_B"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@+id/home_02_others_profile"
                    app:layout_constraintTop_toTopOf="@+id/home_02_others_mini_2_B" />

                <TextView
                    android:id="@+id/home_02_others_re_mini_1_T"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:maxLines="1"
                    android:text="0"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="@+id/home_02_others_mini_1_B"
                    app:layout_constraintEnd_toEndOf="@+id/home_02_others_mini_1_B"
                    app:layout_constraintStart_toStartOf="@+id/home_02_others_mini_1_B"
                    app:layout_constraintTop_toTopOf="@+id/home_02_others_mini_1_B"
                    app:layout_constraintVertical_bias="0.3500000" />

                <Button
                    android:id="@+id/home_02_others_mini_2_B"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:background="@color/trans"
                    android:gravity="bottom|center_horizontal"
                    android:text="팔로워"
                    app:layout_constraintEnd_toStartOf="@+id/home_02_others_mini_3_B"
                    app:layout_constraintStart_toEndOf="@+id/home_02_others_mini_1_B"
                    app:layout_constraintTop_toTopOf="@+id/home_02_others_profile" />

                <TextView
                    android:id="@+id/home_02_others_re_mini_2_T"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:maxLines="1"
                    android:text="0"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="@+id/home_02_others_mini_2_B"
                    app:layout_constraintEnd_toEndOf="@+id/home_02_others_mini_2_B"
                    app:layout_constraintStart_toEndOf="@+id/home_02_others_mini_1_B"
                    app:layout_constraintTop_toTopOf="@+id/home_02_others_mini_2_B"
                    app:layout_constraintVertical_bias="0.35000002" />

                <Button
                    android:id="@+id/home_02_others_mini_3_B"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:background="@color/trans"
                    android:gravity="bottom|center_horizontal"
                    android:text="팔로잉"
                    app:layout_constraintBottom_toBottomOf="@+id/home_02_others_mini_2_B"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/home_02_others_mini_2_B" />

                <TextView
                    android:id="@+id/home_02_others_re_mini_3_T"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:maxLines="1"
                    android:text="0"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="@+id/home_02_others_mini_3_B"
                    app:layout_constraintEnd_toEndOf="@+id/home_02_others_mini_3_B"
                    app:layout_constraintStart_toStartOf="@+id/home_02_others_mini_3_B"
                    app:layout_constraintTop_toTopOf="@+id/home_02_others_mini_3_B"
                    app:layout_constraintVertical_bias="0.35000002" />

                <Button
                    android:id="@+id/home_02_others_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/all_stroke"
                    android:minHeight="30dp"
                    android:text="메세지"
                    app:layout_constraintBottom_toTopOf="@+id/home_02_others_re_screen_T"
                    app:layout_constraintEnd_toStartOf="@+id/home_02_others_follow"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintStart_toEndOf="@+id/home_02_others_profile"
                    app:layout_constraintTop_toBottomOf="@+id/home_02_others_mini_2_B" />

                <Button
                    android:id="@+id/home_02_others_follow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/selector_follower"
                    android:minHeight="30dp"
                    android:text="팔로우"
                    app:layout_constraintBottom_toTopOf="@+id/home_02_others_re_screen_T"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/home_02_others_message"
                    app:layout_constraintTop_toBottomOf="@+id/home_02_others_mini_2_B"
                    app:layout_constraintVertical_bias="0.49" />

                <TextView
                    android:id="@+id/home_02_others_re_screen_T"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="8dp"
                    android:text="나보다 잘 하는 사람을 바라보자!"
                    android:textAlignment="textStart"
                    app:layout_constraintEnd_toEndOf="@+id/home_02_others_follow"
                    app:layout_constraintStart_toStartOf="@+id/home_02_others_profile"
                    app:layout_constraintTop_toBottomOf="@+id/home_02_others_profile" />

                <View
                    android:id="@+id/mybrary_up_line"
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/home_02_others_re_screen_T" />

            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_02_others_Recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="384dp"
                tools:layout_editor_absoluteY="51dp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>