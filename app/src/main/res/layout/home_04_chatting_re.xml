<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/home_04_chatting_re"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/time_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="3dp"
            android:text="몇시 몇분"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/home_04_chat_main"
            app:layout_constraintStart_toEndOf="@+id/home_04_chat_main" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/home_04_chat_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_04_chat_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/chat_you"
            android:maxWidth="200dp"
            android:padding="7dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="상대방 채팅"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_04_chat_nick" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <TextView
            android:id="@+id/home_04_chat_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/home_04_chat_main"
            app:layout_constraintTop_toTopOf="@+id/home_04_chat_profile" />

        <TextView
            android:id="@+id/home_04_chat_main_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/chat_me"
            android:maxWidth="200dp"
            android:padding="7dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="TextView"
            android:textAlignment="textStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <TextView
            android:id="@+id/time_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:text="TextView"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/home_04_chat_main_me"
            app:layout_constraintEnd_toStartOf="@+id/home_04_chat_main_me" />

        <TextView
            android:id="@+id/home_04_chat_read_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:text="0"
            android:textColor="@color/mybrary_main"
            android:textSize="8sp"
            app:layout_constraintBottom_toTopOf="@+id/time_you"
            app:layout_constraintStart_toStartOf="@+id/time_you" />

        <TextView
            android:id="@+id/home_04_chat_read_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:text="0"
            android:textColor="@color/mybrary_main"
            android:textSize="8sp"
            app:layout_constraintBottom_toTopOf="@+id/time_me"
            app:layout_constraintEnd_toEndOf="@+id/time_me" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>