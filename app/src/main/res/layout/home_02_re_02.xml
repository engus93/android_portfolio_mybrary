<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/home_02_re_book_I"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/book_01" />

        <TextView
            android:id="@+id/home_02_re_book_name_T"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:text="골든아워 1"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/home_02_re_book_I"
            app:layout_constraintStart_toStartOf="@+id/home_02_re_book_I"
            app:layout_constraintTop_toBottomOf="@+id/home_02_re_book_I" />

        <TextView
            android:id="@+id/home_02_re_book_author_T"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:text="이국종"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/home_02_re_book_I"
            app:layout_constraintStart_toStartOf="@+id/home_02_re_book_I"
            app:layout_constraintTop_toBottomOf="@+id/home_02_re_book_name_T" />

        <TextView
            android:id="@+id/home_02_re_book_finish_T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:maxLines="1"
            android:text="2018.11.16"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView24"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@+id/home_02_re_book_I"
            app:layout_constraintTop_toBottomOf="@+id/home_02_re_book_author_T"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:text="완독"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/home_02_re_book_I"
            app:layout_constraintStart_toEndOf="@+id/home_02_re_book_finish_T"
            app:layout_constraintTop_toTopOf="@+id/home_02_re_book_finish_T" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>